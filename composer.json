{
  "name": "pdir/convert-to-bundle",
  "type":"contao-bundle",
  "description": "Convert-to bundle for Contao 4",
  "license": "MIT",
  "homepage": "https://pdir.de",
  "authors": [
    {
      "name": "Webdesign f√ºr Dresden",
      "homepage": "https://pdir.de",
      "email": "develop@pdir.de",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "contao/core-bundle": "^4.13 || ^5.3"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.5",
    "contao/manager-plugin": "^2.0",
    "contao/easy-coding-standard": "^3.0",
    "contao/rector": "^1.0",
    "phpunit/phpunit": "^7.1 || ^8.4 || ^9.5",
    "symfony/phpunit-bridge": "^4.4 || ^5.1",
    "phpstan/phpstan": "^1.8 || ^2.1",
    "phpstan/phpstan-phpunit": "^1.1 || ^2.0",
    "phpstan/phpstan-symfony": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Pdir\\ConvertToBundle\\": "src/"
    }
  },
  "extra": {
    "contao-manager-plugin": "Pdir\\ConvertToBundle\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "contao-components/installer": true,
      "php-http/discovery": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "contao/manager-plugin": true
    }
  }
}
